{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "noImplicitAny": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "outDir": "lib",
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./src/ngfactory",
    "entryModule": "./src/app/app.module#AppModule",
    "annotationsAs": "static fields",
    "annotateForClosureCompiler": true
  }
}
