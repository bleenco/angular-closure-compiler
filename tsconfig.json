{
    "angularCompilerOptions": {
        "genDir": "./aot",
        "annotationsAs": "static fields",
        "annotateForClosureCompiler": true
    },
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "outDir": "./aot",
        "declaration": true
    },
    "exclude": [
        "vendor",
        "node_modules",
        "built",
        "dist"
    ],
    "files": [
        "src/app/app.module.ts",
        "src/main.ts"
    ]
}
